<p id="notice"><%= notice %></p>
<h1>Posts</h1>
<ul class="posts--feed">
  <% @posts.each do |post| %>
    <li>
      <h2>
        <%= post.description %>
      </h2>
      <%= image_tag(post.image, class: "posts--image") if post.image.attached? %>
      <div>
        <%= link_to 'Details', post %>
        <%= link_to 'Update', edit_post_path(post) %>
        <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </li>
  <% end %>
</ul>
<br>
<%= link_to 'New Post', new_post_path %>
