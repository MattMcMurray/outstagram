<p id="notice"><%= notice %></p>

<h2>
<%= link_to @user.username, @user%>
</h2>
<%= image_tag(@post.image, class: "posts--image") if @post.image.attached? %>
<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<% if @post.user_id == current_user.id%>
  <%= link_to 'Edit', edit_post_path(@post) %>
<% end %>
